<div class="body">
  <div class="news">
    <div class="form-heading">会員登録</div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'users-form') do |f| %>
        <div class="form-body">
          <div class="field">
            <%= f.label 'メールアドレス' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field">
            <%= f.label 'パスワード' %><br />
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
          <div class="field">
             <%= f.label 'パスワード（確認）' %><br />
             <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
          <%= f.submit "登録" %>
        </div>
      <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>